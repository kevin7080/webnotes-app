    <input type="text" id="title" name="title" value = "{{title}}" {{#if_eq mode 'Edit'}} readonly {{/if_eq}} />
    <label for="body">Body</label>
    <input type="text" id="body" name="body" value = "{{body}}" />

    <input type="submit" value="Submit"/>
</form>